# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Service URLs
USER_SERVICE_URL=http://localhost:3001
COURSE_SERVICE_URL=http://localhost:3002
SCHEDULE_SERVICE_URL=http://localhost:3003
ENROLLMENT_SERVICE_URL=http://localhost:3004

# gRPC Service Configuration
USER_GRPC_HOST=localhost
USER_GRPC_PORT=50051

# JWT Configuration (same as other services)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# RBAC Configuration
RBAC_ENFORCE_PERMISSIONS=true
RBAC_ALLOW_SUPERADMIN_BYPASS=true
RBAC_CACHE_PERMISSIONS=true
RBAC_CACHE_TTL=300

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090