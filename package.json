{
  "name": "student-management-microservices",
  "version": "1.0.0",
  "description": "Microservice system for student management",
  "scripts": {
    "install-all": "yarn install-user && yarn install-course && yarn install-schedule && yarn install-enrollment && yarn install-gateway && yarn install-admin-frontend",
    "install-user": "cd user-service && yarn",
    "install-course": "cd course-service && yarn", 
    "install-schedule": "cd schedule-service && yarn",
    "install-enrollment": "cd enrollment-service && yarn",
    "install-gateway": "cd api-gateway && yarn",
    "install-admin-frontend": "cd admin-frontend && yarn",
    "build-all": "yarn build-user && yarn build-course && yarn build-schedule && yarn build-enrollment && yarn build-gateway && yarn build-admin-frontend",
    "build-user": "cd user-service && yarn build",
    "build-course": "cd course-service && yarn build",
    "build-schedule": "cd schedule-service && yarn build",
    "build-enrollment": "cd enrollment-service && yarn build",
    "build-gateway": "cd api-gateway && yarn build",
    "build-admin-frontend": "cd admin-frontend && yarn build",
    "dev-user": "cd user-service && yarn dev",
    "dev-course": "cd course-service && yarn dev",
    "dev-schedule": "cd schedule-service && yarn dev", 
    "dev-enrollment": "cd enrollment-service && yarn dev",
    "dev-gateway": "cd api-gateway && yarn dev",
    "dev-admin-frontend": "cd admin-frontend && yarn dev",
    "dev-all": "concurrently \"yarn dev-user\" \"yarn dev-course\" \"yarn dev-schedule\" \"yarn dev-enrollment\" \"yarn dev-gateway\" \"yarn dev-admin-frontend\"",
    "start-all": "concurrently \"yarn start-user\" \"yarn start-course\" \"yarn start-schedule\" \"yarn start-enrollment\" \"yarn start-gateway\" \"yarn start-admin-frontend\"",
    "start-user": "cd user-service && yarn start",
    "start-course": "cd course-service && yarn start",
    "start-schedule": "cd schedule-service && yarn start",
    "start-enrollment": "cd enrollment-service && yarn start", 
    "start-gateway": "cd api-gateway && yarn start",
    "start-admin-frontend": "cd admin-frontend && yarn start",
    "type-check": "tsc --noEmit",
    "type-check-all": "yarn type-check-user && yarn type-check-course && yarn type-check-schedule && yarn type-check-enrollment && yarn type-check-gateway && yarn type-check-admin-frontend",
    "type-check-user": "cd user-service && yarn type-check",
    "type-check-course": "cd course-service && yarn type-check",
    "type-check-schedule": "cd schedule-service && yarn type-check",
    "type-check-enrollment": "cd enrollment-service && yarn type-check",
    "type-check-gateway": "cd api-gateway && yarn type-check",
    "type-check-admin-frontend": "cd admin-frontend && yarn type-check",
    "docker-build": "docker-compose build",
    "docker-up": "docker-compose up",
    "docker-down": "docker-compose down",
    "docker-logs": "docker-compose logs -f",
    "docker-restart": "docker-compose down && docker-compose up --build",
    "docker-dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker-prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --build -d",
    "docker-clean": "docker-compose down -v --remove-orphans && docker system prune -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5"
  },
  "keywords": ["microservices", "student", "management", "nodejs", "express", "mongodb"],
  "author": "Student Management Team",
  "license": "MIT"
}